<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Result">

    <TextView
            android:background="#AA0000"
            android:textColor="@color/white"
            android:text="You Won!"
            android:id="@+id/won_lost"
            android:textSize="15sp"
            android:layout_width="410dp"
            android:layout_height="115dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:backgroundTint="#AA0000"
            android:textAlignment="center"
            android:id="@+id/returnToMenu"
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.592"/>
    <Spinner
            android:backgroundTint="#AA0000"
            android:textAlignment="center"
            android:layout_width="263dp"
            android:layout_height="43dp"
            android:id="@+id/spinner"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.382"/>
    <TextView
            android:textColor="@color/white"
            android:background="#AA0000"
            android:textAlignment="center"
            android:text="Choose a reward:"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="410dp"
            android:layout_height="47dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.304" app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>